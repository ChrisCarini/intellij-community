<idea-plugin visibility="public">
  <module value="com.intellij.modules.compose"/>

  <extensions defaultExtensionNs="com.intellij">
    <registryKey defaultValue="true"
                 description="Allows changing how ComposePanel is rendered using rendering on Graphics (when `true`, it provides smooth Swing interop) or on native AWT texture (when `false`). Works only in internal mode"
                 key="compose.swing.render.on.graphics"/>
    <search.traverseUiHelper implementation="com.intellij.platform.compose.ComposeTraverseUiHelper"/>

    <applicationActivity implementation="com.intellij.platform.compose.SkikoPreloader"/>
    <undoManagerProvider implementation="com.intellij.platform.compose.ComposeUndoManagerProvider"/>
  </extensions>

  <dependencies>
    <!-- region Generated dependencies - run `Generate Product Layouts` to regenerate -->
    <module name="intellij.platform.diagnostic.telemetry"/>
    <module name="intellij.platform.jewel.foundation"/>
    <module name="intellij.platform.jewel.ideLafBridge"/>
    <module name="intellij.platform.jewel.ui"/>
    <!-- endregion -->
  </dependencies>
</idea-plugin>